<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pale_olive</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">350</item>
        <item name="postSplashScreenTheme">@style/Theme.BonApp</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pale_olive</item>
        <item name="android:navigationBarColor">@color/pale_olive</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>